						"url": {
							"raw": "{{base_url}}/api/tax/corporate-tax-file/",
							"host": ["{{base_url}}"],
							"path": ["api", "tax", "corporate-tax-file", ""]
						},
						"description": "Create a new corporate tax filing record"
					},
					"response": []
				},
				{
					"name": "Get Corporate Tax Filing Details",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/tax/corporate-tax-filing-detail/?filing_id=123",
							"host": ["{{base_url}}"],
							"path": ["api", "tax", "corporate-tax-filing-detail", ""],
