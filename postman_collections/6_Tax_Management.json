							"raw": "{{base_url}}/api/tax/corporate-tax-file/",
							"host": ["{{base_url}}"],
							"path": ["api", "tax", "corporate-tax-file", ""]
						},
						"description": "List all corporate tax filings"
					},
					"response": []
				},
				{
					"name": "Create Corporate Tax Filing",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"country\": \"SA\",\n  \"filing_period_start\": \"2024-01-01\",\n  \"filing_period_end\": \"2024-12-31\",\n  \"tax_year\": 2024,\n  \"taxable_income\": 1000000.00,\n  \"tax_rate\": 20.00,\n  \"tax_amount\": 200000.00,\n  \"filing_date\": \"2025-03-31\",\n  \"due_date\": \"2025-04-30\",\n  \"status\": \"draft\",\n  \"notes\": \"Annual corporate tax filing for 2024\"\n}"
