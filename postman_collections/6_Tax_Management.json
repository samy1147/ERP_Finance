					"name": "Get Reversible Tax Entries",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/tax/corporate-tax-reverse/",
							"host": ["{{base_url}}"],
							"path": ["api", "tax", "corporate-tax-reverse", ""]
						},
						"description": "List all corporate tax entries that can be reversed"
					},
					"response": []
				},
